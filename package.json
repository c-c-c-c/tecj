{
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "node-sass": "^4.5.3",
    "sanitize.css": "^5.0.0"
  },
  "scripts": {
    "build": "npm run style:build & npm run script:build",
    "watch": "npm run style:watch & npm run script:watch",
    "style:watch": "node-sass --include-path src/style --include-path node_modules -wr ./src/style -o ./docs/assets",
    "style:build": "node-sass --include-path src/style --include-path node_modules ./src/style -o ./docs/assets",
    "script:watch": "babel ./src/script -w -s --out-dir ./docs/assets",
    "script:build": "babel ./src/script -s --out-dir ./docs/assets"
  }
}
